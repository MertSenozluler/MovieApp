@*Navbar*@
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container">
        <a class="navbar-brand" href="/Home/Index" id="logo">Movie App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                </li>
            </ul>
            <ul class="navbar-nav mb-2 mb-lg-0 login">
                @if(User.Identity.IsAuthenticated)
                {
                    <li>                       
                        <a class="btn navButton" href="#">Welcome @User.Identity.Name</a>
                    </li>
                }
                <li>
                    <a class="btn navButton" href="/Home/TermsBuy"><i class="fa-solid fa-comment"></i> Terms-Buy</a>
                </li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ml-4">
                        <a class="btn navButton" href="/UserAuthentication/Login"><i class="fa-solid fa-right-to-bracket"></i> Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn navButton" href="/UserAuthentication/Registration"><i class="fa-solid fa-registered"></i> Register</a>
                    </li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="btn navButton" href="/UserAuthentication/Logout"><i class="fa-solid fa-right-from-bracket"></i> Logout</a>
                    </li>
                }
                
                @if (User.IsInRole("admin"))
                {              

                    <li class="nav-item"><a class="btn navButton" href="/UserAdminPage/AdminPage">Admin Page</a></li>
                }

            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="term">
                <button class="btn btn-dark" type="submit">Search</button>
            </form>

     

        </div>
    </div>
</nav>

