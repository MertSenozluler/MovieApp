
@{
    ViewData["Title"] = "Edit";
}

@model MovieApp.Models.Domain.Movie

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            @if (TempData["msg"] != null)
            {
                    <div class="mb-1 bg-danger color text-white rounded">@TempData["msg"]</div>
            }
            <h2>Update Movie</h2>
            <form asp-action="Edit" method="post" enctype="multipart/form-data">               
                <input type="hidden" class="input" asp-for="Id" />
                <input type="hidden" class="input" asp-for="MovieImage" />

                <div class="mb-3">
                    <label asp-for="MovieName" class="form-label">Movie Name</label>
                    <input type="text" asp-for="MovieName" class="form-control">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="MovieName"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MovieDescription" class="form-label">Movie Description</label>
                    <textarea asp-for="MovieDescription" class="form-control"></textarea>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="MovieDescription"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Actors" class="form-label">Actors</label>
                    <textarea asp-for="Actors" class="form-control"></textarea>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Actors"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PublishYear" class="form-label">ActPublishYearors</label>
                    <textarea asp-for="PublishYear" class="form-control"></textarea>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="PublishYear"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label">Image</label>
                    <input type="file" asp-for="ImageFile" class="form-control">
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="ImageFile"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Categories" class="form-label">Categories</label>
                    <select asp-items="Model.MultiCategoryList" asp-for="Categories" class="input" multiple>
                        <option value="">--Select--</option>
                    </select>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="Categories"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="SubCategories" class="form-label">Subcategories</label>
                    <select asp-items="Model.MultiSubCategoryList" asp-for="SubCategories" class="input" multiple>
                        <option value="">--Select--</option>
                    </select>
                </div>
                <div class="message-box pd-x-28 error">
                    <span asp-validation-for="SubCategories"></span>
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-sec" href="/Movie/MovieList">All records</a>
            </form>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>

